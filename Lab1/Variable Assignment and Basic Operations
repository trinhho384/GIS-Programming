#Question 1
def question1():
    NYC = {
        "latitude" : 40.7128,
        "longitude": -74.0060,
        "population": 8336817,
        "area":  783.8,
    }
    density = NYC["population"] / NYC["area"]
    density = round(density, 2)
    print("Population density of New York City", density)
    print(f"Latitude {NYC["latitude"]}, Longitude: {NYC["longitude"]}")
#Question 2

def question2():
    city_name = "San Francisco"
    city_name_lowercase = city_name.lower()
    city_name_uppercase = city_name.upper()
    city_name = city_name.replace("San", "Los")
    print(city_name)
    print(city_name_lowercase)
    print(city_name_uppercase)
#Question 3
def question3():
    city = [
        ("New York City:", 40.7128, -74.0060),
        ("Los Angeles:", 34.0522, -118.2437),
        ("Chicago:", 41.8781, -87.6928),
    ]
    city.append(("Miami: ", 25.7617, -80.1918))
    print(city)
    print(city[:2])
